<%= render partial: "backdrop", locals: {entity: @artist} %>

<h1><%= link_to @artist.name, @artist.slug %></h1>

<section class="discography">
    <ul>
    <% @artist.albums.each do |album| %>
        <li>
            <img src="<%= album.get_thumbnail_url 'thumb' %>" alt="<%= album.title %>" title="<%= album.title %>">
            <%= link_to album.title, controller: :albums, action: :view, slug: album.slug %>
        </li>
    <% end %>
    </ul>
</section>

<section class="similar-artists">
    <ul>
    <% @artist.similar_artists.each do |similar_artist| %>
        <li>
            <img src="<%= similar_artist.get_thumbnail_url 'thumb' %>" alt="<%= similar_artist.name %>" title="<%= similar_artist.name %>">
            <%= link_to similar_artist.name, controller: :artists, action: :view, slug: similar_artist.slug %>
        </li>
    <% end %>
    </ul>
</section>

<section class="update-information">
    <ul>
        <li>LastFM : <%= @artist.last_lastfm_update %></li>
        <li>MusicBrainz : <%= @artist.last_mb_update %></li>
        <li>Entity : <%= @artist.updated_at %></li>
    </ul>
</section>
