<!DOCTYPE html>
<html>
<head>
  <title>Themusictank</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= yield :header %>
</head>
<body class="<%= action_name %>">
    <header>
        <div class="navbar navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only"><%= t 'Toggle navigation' %></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand" title="<%= t 'The Music Tank' %>"><%= t 'The Music Tank' %></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="searchbar">
                            <form action="/search/" method="get">
                                <input class="typeahead" type="text" name="q" value="" placeholder="<%= t 'Search across everything' %>" />
                                <input type="submit" />
                            </form>
                        </li>
                        <li><%= link_to t('Popular'), controller: :artists, action: :index %></li>
                        <% unless !current_user %>
                            <li><%= link_to t("You"), controller: 'profiles', action: :view, slug: current_user.slug %></li>
                            <li>
                            <%= link_to controller: :notifications, action: :index  do %>
                                <i class="fa fa-bell-o"></i>
                            <% end %>
                            </li>
                            <li class="dropdown">
                                <a href="#" id="btnSettings" class="dropdown-toggle" data-toggle="dropdown">
                                  <i class="fa fa-cog"></i>
                                  <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="btnSettings">
                                    <li><%= link_to t("Settings"), controller: :profiles, action: :edit %></li>
                                    <li><%= link_to t("Logout"), controller: :sessions, action: :signout %></li>
                                </ul>
                            </li>
                        <% else %>
                            <li><%= link_to t('Your account'), controller: :profiles, action: :dashboard %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </header>

<%= yield %>

    <footer class="site-foot">
        <div class="container">
            <nav>
                <ul class="nav nav-pills social">
                    <li><a href="http://www.facebook.com/themusictank/" target="_blank"><i class="fa fa-facebook"></i></li>
                    <li><a href="http://www.twitter.com/themusictank/" target="_blank"><i class="fa fa-twitter"></i></li>
                    <li><a href="https://plus.google.com/117543200043480372792" target="_blank"><i class="fa fa-google-plus"></i></li>
                </ul>
                <ul class="nav nav-pills website">
                    <li><%= link_to t('About'), controller: :tmt, action: :about %></li>
                    <li><%= link_to t('Legal'), controller: :tmt, action: :legal %></li>
                    <li class="copyright">1999 - <%= Time.now.year %> <%= t "The Music Tank" %></li>
                </ul>
            </nav>
        </div>
    </footer>
</body>
</html>
